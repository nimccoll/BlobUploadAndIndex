@{
    ViewBag.Title = "Upload File to Blob Storage";
}

<h2>Upload File to Blob Storage</h2>

@using (Html.BeginForm("UploadBlob", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    if (ViewBag.Message != null)
    {
        <div class="alert alert-info" role="alert">@ViewBag.Message</div>
    }

    <div class="form-group row">
        <label class="col-form-label col-md-2" for="uploadedFile">Select File:</label>
        <div class="col-md-10">
            <input type="file" name="uploadedFile" class="form-control-file" />
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-md-2 col-md-10">
            <input type="submit" value="Upload" class="btn btn-secondary" />
        </div>
    </div>
}